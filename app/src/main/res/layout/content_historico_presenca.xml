<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_slideshow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:background="@color/azul_bem_clarinho">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Projeto Integrado"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Presença/Total de Aulas:" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Porcentagem:" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:background="@color/azul_bem_clarinho">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Desenvolvimento mobile e Internet das coisas"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Presença/Total de Aulas:" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Porcentagem:" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:background="@color/azul_bem_clarinho">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Arquitetura de Software"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Presença/Total de Aulas:" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Porcentagem:" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:background="@color/azul_bem_clarinho">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sistemas Integrados e Computação em Nuvem"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Presença/Total de Aulas:" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Porcentagem:" />
    </LinearLayout>



</LinearLayout>